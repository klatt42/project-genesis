{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "../plan-agent/**/*.ts",
    "../scout-agent/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../plan-agent/node_modules",
    "../plan-agent/dist",
    "../scout-agent/node_modules",
    "../scout-agent/dist"
  ]
}

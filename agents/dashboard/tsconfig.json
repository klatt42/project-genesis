{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "lib": ["ES2022"],
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../parallel-executor/**/*.ts",
    "../coordination/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
